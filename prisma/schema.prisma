generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


enum role {
  PLAYER
  HOST
}

type user {
  id            Int
  role          role     @default(PLAYER)
  username      String
  score         Int      @default(0)
}

type answer {
  answer        String
  isCorrect     Boolean
}

type question {
  id            Int
  question      String
  imageUrl      String? 
  answers       answer[]
}

model quizzes {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String   
  code          String
  isLive        Boolean  @default(true)
  createdAt     DateTime @default(now())
  users         user[]  
  questions     question[]
  
}
